{
  "name": "toggle-audio-device",
  "title": "Toggle Audio Device",
  "description": "Toggle the active audio output device of your mac.",
  "icon": "command-icon.png",
  "author": "takuyahara",
  "license": "MIT",
  "commands": [
    {
      "name": "toggle-audio-device",
      "title": "Toggle Audio Device",
      "subtitle": "Toggle Audio Device",
      "description": "Toggle the active audio output device",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "hdmi",
      "required": true,
      "description": "Exclude HDMI devices from toggling.",
      "label": "Exclude HDMI devices",
      "type": "checkbox",
      "default": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.53.2",
    "execa": "^7.1.1",
    "@spotxyz/macos-audio-devices": "1.5.0",
    "react-use": "^17.4.0",
    "run-applescript": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "~20.3.0",
    "@types/react": "^18.2.11",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "copy-binary": "cp node_modules/@spotxyz/macos-audio-devices/audio-devices assets/audio-devices",
    "build": "npm run copy-binary && ray build -e dist -o dist",
    "dev": "npm run copy-binary && ray develop"
  }
}